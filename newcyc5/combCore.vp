logic [`$bW-1`:0] jmpaddr_s3;
logic [`$bW-1`:0] alu_o_s3, alu_o_s4, alu_o_s5, alu_a_s2, alu_b_s2, alu_a_s3, alu_b_s3;

logic [`$bW-1`:0] memRdByteWord_s5, memRdByteWord_s4,memRdByte_s4, memrddata_s4, memwrdata, memWrByte_s4, memWrBytelow, memWrBytehi, regwrdata;
logic lwl, swl, lwr, swr, link_s2, link_s5;

logic [4:0] aluctl_s3;  
logic [4:0] aluop_s2;  
logic [1:0] aluop_s3;  
logic bne_s2, bne_s3, bgtz_s2, bgtz_s3;
