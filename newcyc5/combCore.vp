assign alu_b_s2 = alusrc_s2 ? simm_s2 : src1_s2;
assign alu_a_s2 = src0_s2;
assign muxfunc_s2 = aluimm_s2 ? mfn_s2 : fn_s2;

assign memWrAddr = {alu_o_s4[31:2],2'b00};
assign memRdAddr = {alu_o_s4[31:2],2'b00};
assign memWrData = (bytemem_s4||wordmem_s4) ? memWrByte_s4 : src1_s4;

assign link_s2 = (jmp_s2 || jmpreg_s2 || bgez_s2 || bltz_s2) && regWrEn_s2;

assign dst0 = link_s5 ? pcplus8_s5 : (memtoreg_s5 ? memRdByteWord_s5 : alu_o_s5);
assign regWrAddr_s2 = link_s2 ? 5'b11111 : (regdst_s2 ? rd_s2 : rt_s2);

assign memRdByteWord_s4 = (bytemem_s4 || wordmem_s4) ? memRdByte_s4 : memrddata_s4;

always_comb begin
	case({bytemem_s4,alu_o_s4[1:0]})
		3'b100: memRdByte_s4 = {{24{memrddata_s4[7]}},  memrddata_s4[7:0]};
		3'b101: memRdByte_s4 = {{24{memrddata_s4[15]}}, memrddata_s4[15:8]};
		3'b110: memRdByte_s4 = {{24{memrddata_s4[23]}}, memrddata_s4[23:16]};
		3'b111: memRdByte_s4 = {{24{memrddata_s4[31]}}, memrddata_s4[31:24]};
		3'b000: memRdByte_s4 = {{16{memrddata_s4[15]}}, memrddata_s4[15:0]};
		3'b010: memRdByte_s4 = {{16{memrddata_s4[31]}}, memrddata_s4[31:16]};
	endcase
end

assign memrddata_s4 = memRdData;
always_comb begin
	case({bytemem_s4, alu_o_s4[1:0]})
		3'b100: memWrByte_s4 = {memrddata_s4[31:8],  src1_s4[7:0]}; 
		3'b101: memWrByte_s4 = {memrddata_s4[31:16], src1_s4[7:0], memrddata_s4[7:0]};
		3'b110: memWrByte_s4 = {memrddata_s4[31:24], src1_s4[7:0], memrddata_s4[15:0]};
		3'b111: memWrByte_s4 = {src1_s4[7:0], memrddata_s4[23:0]};
		3'b000: memWrByte_s4 = {memrddata_s4[31:16], src1_s4[15:0]};
		3'b010: memWrByte_s4 = {src1_s4[15:0], memrddata_s4[15:0]};
	endcase
end

//Pipelines

//; my $ifid = generate_base("ifid", "IFID");
`$ifid->instantiate()`(.clk, .rst, .pcplus8(pcplus8_s1), .pcplus4(pcplus4_s1), .instr(instr_s1), .opcplus8(pcplus8_s2), .opcplus4(pcplus4_s2), .oinstr(instr_s2));

//; my $idex = generate_base("idex", "IDEX");
`$idex->instantiate()`(.clk, .rst, .muxfunc(muxfunc_s2),.omuxfunc(muxfunc_s3),.memRdEn(memRdEn_s2),.omemRdEn(memRdEn_s3),.memWrEn(memWrEn_s2),.omemWrEn(memWrEn_s3),.src0(src0_s2),.osrc0(src0_s3),.src1(src1_s2),.osrc1(src1_s3),.regWrEn(regWrEn_s2),.oregWrEn(regWrEn_s3),.regWrAddr(regWrAddr_s2),.oregWrAddr(regWrAddr_s3),.pcplusimm(pcplusimm_s2),.opcplusimm(pcplusimm_s3),.jmpaddr(jmpaddr_s2),.ojmpaddr(jmpaddr_s3),.alu_a(alu_a_s2),.oalu_a(alu_a_s3),.alu_b(alu_b_s2),.oalu_b(alu_b_s3),.aluop(aluop_s2),.oaluop(aluop_s3),.bne(bne_s2),.obne(bne_s3),.bgtz(bgtz_s2),.obgtz(bgtz_s3),.beq(beq_s2),.obeq(beq_s3),.jmp(jmp_s2),.ojmp(jmp_s3),.jmpreg(jmpreg_s2),.ojmpreg(jmpreg_s3),.memtoreg(memtoreg_s2),.omemtoreg(memtoreg_s3),.bgez(bgez_s2),.obgez(bgez_s3),.blez(blez_s2),.oblez(blez_s3),.bltz(bltz_s2),.obltz(bltz_s3),.alusrc(alusrc_s2),.oalusrc(alusrc_s3),.bytemem(bytemem_s2),.obytemem(bytemem_s3),.wordmem(wordmem_s2),.owordmem(wordmem_s3),.link(link_s2),.olink(link_s3),.pcplus8(pcplus8_s2),.opcplus8(pcplus8_s3),.shmt(shmt_s2),.oshmt(shmt_s3));

//; my $exmem = generate_base("exmem", "EXMEM");
`$exmem->instantiate()`(.clk, .rst, .alu_o(alu_o_s3),.oalu_o(alu_o_s4),.bytemem(bytemem_s3),.bytemem(bytemem_s4),.wordmem(wordmem_s3),.owordmem(wordmem_s4),.src1(src1_s3),.osrc1(src1_s4),.link(link_s3),.olink(link_s4),.pcplus8(pcplus8_s3),.opcplus8(pcplus8_s4),.memtoreg(memtoreg_s3),.omemtoreg(memtoreg_s4),.regWrAddr(regWrAddr_s3),.oregWrAddr(regWrAddr_s4),.memRdEn(memRdEn_s3),.omemRdEn(memRdEn_s4),.memWrEn(memWrEn_s3),.omemWrEn(memWrEn_s4),.regWrEn(regWrEn_s3),.oregWrEn(regWrEn_s4),.pcNxt(pcNxt_s3),.opcNxt(pcNxt_s4));

//; my $memwb = generate_base("memwb", "MEMWB");
`$memwb->instantiate()`(.clk,.rst,.alu_o(alu_o_s4),.oalu_o(alu_o_s5),.link(link_s4),.olink(link_s5),.pcplus8(pcplus8_s4),.opcplus8(pcplus8_s5),.memtoreg(memtoreg_s4),.omemtoreg(memtoreg_s5),.regWrAddr(regWrAddr_s4),.oregWrAddr(regWrAddr_s5),.memRdByteWord(memRdByteWord_s4),.omemRdByteWord(memRdByteWord_s5),.regWrEn(regWrEn_s4),.oregWrEn(regWrEn_s5));

