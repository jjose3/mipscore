`$alu->instantiate()`(.clk, .rst, .ctl(aluctl_s3), .a(alu_a-s3), .b(alu_b_s3), .shmt(shmt_s3), .out(alu_o_s3), .gtz(gtz_s3), .gez(gez_s3), .zero(zero_s3));
